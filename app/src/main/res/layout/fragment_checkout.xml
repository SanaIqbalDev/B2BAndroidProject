<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.CheckoutFragment">

    <data>
        <variable
            name="CheckOutviewModel"
            type="com.codeseven.pos.util.CheckOutViewModel.CheckoutObserver" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            style="@style/Widget.MaterialComponents.AppBarLayout.Surface">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/checkout_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:navigationIcon="@drawable/ic_navigation_back_small"
                android:background="@color/primaryDarkColor"
                app:title="CHECKOUT"
                app:titleTextColor="@color/white"
                android:gravity="center_vertical"/>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border">


                <TextView
                    android:id="@+id/tvquestion"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="When do you want us to deliver?"
                    android:textSize="18sp"
                    android:layout_marginLeft="18dp"
                    android:textColor="@color/black"
                    />

                <LinearLayout
                    android:id="@+id/ll_one"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/tvquestion"
                    android:background="@drawable/border"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    >

                    <ImageView
                        android:id="@+id/iv_calender"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:src="@drawable/ic_calender"/>

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Select order date"
                        android:textSize="14sp"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/ll_one"
                    >

                    <LinearLayout
                        android:id="@+id/layout_time_a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/tvquestion"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        >

                        <ImageView
                            android:id="@+id/clock_a"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:src="@drawable/ic_clock"/>

                        <TextView
                            android:id="@+id/date_a"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="10:00 AM - 02:00 PM"
                            android:textSize="15sp"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_time_b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/tvquestion"
                        android:gravity="center_vertical"

                        >

                        <ImageView
                            android:id="@+id/clock_b"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:src="@drawable/ic_clock"/>

                        <TextView
                            android:id="@+id/date_b"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="02:00 PM - 06:00 PM"
                            android:textSize="15sp"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_time_c"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/tvquestion"
                        android:gravity="center_vertical"

                        >

                        <ImageView
                            android:id="@+id/clock_c"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:src="@drawable/ic_clock"/>

                        <TextView
                            android:id="@+id/date_c"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="06:00 PM - 09:00 PM"
                            android:textSize="15sp"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_time_d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/tvquestion"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp"

                        >

                        <ImageView
                            android:id="@+id/clock_d"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:src="@drawable/ic_clock"/>

                        <TextView
                            android:id="@+id/date_d"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="09:00 PM - 12:00 PM"
                            android:textSize="15sp"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>



                </LinearLayout>

                <TextView
                    android:id="@+id/tv_comments"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/ll_two"
                    android:text="Any Comments or Note:"
                    android:textSize="18sp"
                    android:layout_marginLeft="18dp"
                    android:textColor="@color/black"
                    />
                <EditText
                    android:id="@+id/et_comments"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_comments"
                    android:background="@drawable/border"
                    android:textSize="16sp"
                    android:gravity="left|top"
                    android:padding="10dp"
                    android:singleLine="false"
                    android:hint="Delivery Comment / Note"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"

                    />

                <TextView
                    android:id="@+id/tv_ship_to"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/et_comments"
                    android:text="Ship To"
                    android:textSize="18sp"
                    android:layout_marginLeft="18dp"
                    android:textColor="@color/black"
                    />
                <LinearLayout
                    android:id="@+id/layout_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/border"
                    app:layout_constraintTop_toBottomOf="@id/tv_ship_to">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Default Shipping Address"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18dp"/>
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:dividerColor="@color/colorDivider"
                        />

                    <TextView
                        android:id="@+id/tv_shipping_address"
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:layout_height="wrap_content"
                        android:singleLine="false"

                        />
                    <TextView
                        android:id="@+id/tv_phone_number"
                        android:layout_width="match_parent"
                        android:textColor="@color/primaryDarkColor"
                        android:textSize="16sp"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_height="wrap_content"

                        android:singleLine="false"

                        />

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:dividerColor="@color/colorDivider"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Change Shipping Address"
                        android:textColor="@color/primaryDarkColor"
                        android:textSize="18dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_shipping_method"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/layout_b"
                    android:text="Shipping Methods"
                    android:textSize="18sp"
                    android:layout_marginLeft="18dp"
                    android:textColor="@color/black"
                    />




            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    </FrameLayout>
</layout>