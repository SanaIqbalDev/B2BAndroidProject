<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>
    </data>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AudioRecordingFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">


        <ImageButton
            android:id="@+id/btn_start"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_start_audio_recording_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />


        <ImageButton
            android:id="@+id/btn_stop"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_stop_audio_recording_24"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/btn_start"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />


        <Button
            android:id="@+id/btn_play"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Upload to GCP"
            app:layout_constraintTop_toBottomOf="@id/btn_stop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />


        <TextView
            android:id="@+id/tv_recording_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recording Status"
            app:layout_constraintTop_toBottomOf="@id/btn_play"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />






    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
</layout>